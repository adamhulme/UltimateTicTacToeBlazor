@page "/"
@using UltimateTicTacToe.Models
@using UltimateTicTacToeBlazor.AI
@rendermode InteractiveServer
@implements IDisposable

<PageTitle>Ultimate Tic Tac Toe</PageTitle>

<div class="game-container">
    <h1>Ultimate Tic Tac Toe</h1>
    
    @if (!gameStarted)
    {
        <div class="player-setup">
            <h3>Player Setup</h3>
            <div class="player-inputs">
                <div class="player-input">
                    <label for="playerX">Player X Name:</label>
                    <input id="playerX" @bind="playerXName" placeholder="Enter Player X name" maxlength="20" disabled="@(playVsBot && botPlays == CellState.X)" />
                </div>
                <div class="player-input">
                    <label for="playerO">Player O Name:</label>
                    <input id="playerO" @bind="playerOName" placeholder="Enter Player O name" maxlength="20" disabled="@(playVsBot && botPlays == CellState.O)" />
                </div>
            </div>

            <div class="single-player">
                <h4>Opponent</h4>
                <div>
                    <input type="checkbox" id="vsBot" @bind="playVsBot" />
                    <label for="vsBot">Play vs Bot</label>
                </div>
                @if (playVsBot)
                {
                    <div class="alert alert-info" role="alert">
                        Bot games use Unlimited time control.
                    </div>
                }
                @if (playVsBot)
                {
                    <div class="bot-side">
                        <label>Bot plays:</label>
                        <InputSelect @bind-Value="botPlays">
                            <option value="@CellState.X">X</option>
                            <option value="@CellState.O">O</option>
                        </InputSelect>
                    </div>
                    <div class="bot-difficulty">
                        <label>Difficulty:</label>
                        <InputSelect @bind-Value="botDifficulty">
                            <option value="@BotDifficulty.Easy">Easy</option>
                            <option value="@BotDifficulty.Medium">Medium</option>
                            <option value="@BotDifficulty.Hard">Hard</option>
                        </InputSelect>
                    </div>
                }
            </div>
            
            <div class="game-mode-selection">
                <h4>Game Mode</h4>
                <div class="mode-options">
                    <div class="mode-option">
                        <input type="radio" id="unlimited" name="gameMode" value="Unlimited" @onchange="() => selectedGameMode = GameMode.Unlimited" checked="@(selectedGameMode == GameMode.Unlimited)" />
                        <label for="unlimited">
                            <strong>Unlimited Time</strong>
                            <small>Take as long as you need</small>
                        </label>
                    </div>
                    <div class="mode-option">
                        <input type="radio" id="blitz" name="gameMode" value="Blitz" @onchange="() => selectedGameMode = GameMode.Blitz" checked="@(selectedGameMode == GameMode.Blitz)" disabled="@playVsBot" />
                        <label for="blitz">
                            <strong>Blitz</strong>
                            <small>30 seconds per move</small>
                        </label>
                    </div>
                    <div class="mode-option">
                        <input type="radio" id="rapid" name="gameMode" value="Rapid" @onchange="() => selectedGameMode = GameMode.Rapid" checked="@(selectedGameMode == GameMode.Rapid)" disabled="@playVsBot" />
                        <label for="rapid">
                            <strong>Rapid</strong>
                            <small>60 seconds per move</small>
                        </label>
                    </div>
                    <div class="mode-option">
                        <input type="radio" id="chess5" name="gameMode" value="Chess5" @onchange="() => selectedGameMode = GameMode.Chess5" checked="@(selectedGameMode == GameMode.Chess5)" disabled="@playVsBot" />
                        <label for="chess5">
                            <strong>Chess Clock 5'</strong>
                            <small>5 minutes per player</small>
                        </label>
                    </div>
                    <div class="mode-option">
                        <input type="radio" id="chess10" name="gameMode" value="Chess10" @onchange="() => selectedGameMode = GameMode.Chess10" checked="@(selectedGameMode == GameMode.Chess10)" disabled="@playVsBot" />
                        <label for="chess10">
                            <strong>Chess Clock 10'</strong>
                            <small>10 minutes per player</small>
                        </label>
                    </div>
                    <div class="mode-option">
                        <input type="radio" id="chess5inc3" name="gameMode" value="Chess5Inc3" @onchange="() => selectedGameMode = GameMode.Chess5Inc3" checked="@(selectedGameMode == GameMode.Chess5Inc3)" disabled="@playVsBot" />
                        <label for="chess5inc3">
                            <strong>5 | 3</strong>
                            <small>5 minutes, 3s increment</small>
                        </label>
                    </div>
                    <div class="mode-option">
                        <input type="radio" id="chess10inc5" name="gameMode" value="Chess10Inc5" @onchange="() => selectedGameMode = GameMode.Chess10Inc5" checked="@(selectedGameMode == GameMode.Chess10Inc5)" disabled="@playVsBot" />
                        <label for="chess10inc5">
                            <strong>10 | 5</strong>
                            <small>10 minutes, 5s increment</small>
                        </label>
                    </div>
                    <div class="mode-option">
                        <input type="radio" id="custom" name="gameMode" value="Custom" @onchange="() => selectedGameMode = GameMode.Custom" checked="@(selectedGameMode == GameMode.Custom)" disabled="@playVsBot" />
                        <label for="custom">
                            <strong>Custom</strong>
                            <small>Total time + increment</small>
                        </label>
                    </div>
                </div>
                @if (selectedGameMode == GameMode.Custom)
                {
                    <div class="custom-time-controls">
                        <div class="control">
                            <label>Total Minutes (per player)</label>
                            <input type="number" min="1" max="180" @bind="customTotalMinutes" disabled="@playVsBot" />
                        </div>
                        <div class="control">
                            <label>Increment Seconds (per move)</label>
                            <input type="number" min="0" max="60" @bind="customIncrementSeconds" disabled="@playVsBot" />
                        </div>
                    </div>
                }
            </div>
            
            <button class="btn btn-success start-game-btn" @onclick="StartGame" disabled="@(!CanStartGame())">
                Start Game
            </button>
        </div>
    }
    else
    {
        <div class="scoreboard">
            <div class="player-score">
                <span class="player-name">@playerXName (X)</span>
                <span class="score">@playerXScore</span>
            </div>
            <div class="score-separator">-</div>
            <div class="player-score">
                <span class="player-name">@playerOName (O)</span>
                <span class="score">@playerOScore</span>
            </div>
        </div>
        
        <div class="game-info">
            <div class="status">
                @if (game.State == BoardState.Active)
                {
                    var currentPlayerName = game.CurrentPlayer == CellState.X ? playerXName : playerOName;
                    <span>Current Player: <strong>@currentPlayerName (@game.CurrentPlayer)</strong></span>
                    
                    @if (selectedGameMode != GameMode.Unlimited)
                    {
                        @if (IsChessClockMode())
                        {
                            <div class="timer-display chess-clock">
                                <div class="player-clock @(game.CurrentPlayer == CellState.X ? "active" : "")">
                                    <span class="player-name">@playerXName (X)</span>
                                    <span class="timer-value @GetTimerClass(CurrentPlayerRemainingTime())">@FormatTime(remainingTimeX)</span>
                                </div>
                                <div class="player-clock @(game.CurrentPlayer == CellState.O ? "active" : "")">
                                    <span class="player-name">@playerOName (O)</span>
                                    <span class="timer-value @GetTimerClass(CurrentPlayerRemainingTime())">@FormatTime(remainingTimeO)</span>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="timer-display">
                                <span class="timer-label">Time remaining:</span>
                                <span class="timer-value @GetTimerClass(remainingTime)">@FormatTime(remainingTime)</span>
                            </div>
                        }
                    }
                    
                    @if (game.NextBoardRow.HasValue && game.NextBoardCol.HasValue)
                    {
                        var boardPosition = GetBoardPositionName(game.NextBoardRow.Value, game.NextBoardCol.Value);
                        <span class="next-board">| Must play in <strong class="board-location">@boardPosition</strong> board</span>
                    }
                }
                else if (game.State == BoardState.WonByX)
                {
                    var nextStarterName = nextGameStarter == CellState.X ? playerXName : playerOName;
                    <span class="winner">🎉 @playerXName Wins! 🎉</span>
                    <br />
                    <span class="next-starter">@nextStarterName will start the next game</span>
                }
                else if (game.State == BoardState.WonByO)
                {
                    var nextStarterName = nextGameStarter == CellState.X ? playerXName : playerOName;
                    <span class="winner">🎉 @playerOName Wins! 🎉</span>
                    <br />
                    <span class="next-starter">@nextStarterName will start the next game</span>
                }
                else
                {
                    var nextStarterName = nextGameStarter == CellState.X ? playerXName : playerOName;
                    <span class="draw">Game ended in a draw!</span>
                    <br />
                    <span class="next-starter">@nextStarterName will start the next game</span>
                }
            </div>
            
            <div class="game-buttons">
                <button class="btn btn-primary reset-btn" @onclick="ResetGame">New Game</button>
                <button class="btn btn-secondary setup-btn" @onclick="BackToSetup">Change Players</button>
            </div>
        </div>

        <div class="ultimate-board">
        @for (int boardRow = 0; boardRow < 3; boardRow++)
        {
            @for (int boardCol = 0; boardCol < 3; boardCol++)
            {
                var currentBoardRow = boardRow;
                var currentBoardCol = boardCol;
                var board = game.Boards[boardRow, boardCol];
                var isActiveBoard = !game.NextBoardRow.HasValue || 
                                  (game.NextBoardRow == boardRow && game.NextBoardCol == boardCol);
                var boardClass = GetBoardClass(board, isActiveBoard);
                
                <div class="small-board @boardClass">
                    @if (board.State == BoardState.WonByX)
                    {
                        <div class="board-winner">X</div>
                    }
                    else if (board.State == BoardState.WonByO)
                    {
                        <div class="board-winner">O</div>
                    }
                    else if (board.State == BoardState.Draw)
                    {
                        <div class="board-draw">Draw</div>
                    }
                    else
                    {
                        @for (int cellRow = 0; cellRow < 3; cellRow++)
                        {
                            @for (int cellCol = 0; cellCol < 3; cellCol++)
                            {
                                var currentCellRow = cellRow;
                                var currentCellCol = cellCol;
                                var cell = board.Cells[cellRow, cellCol];
                                var cellClass = GetCellClass(cell, isActiveBoard && game.State == BoardState.Active);
                                
                                <button class="cell @cellClass" 
                                        @onclick="() => MakeMove(currentBoardRow, currentBoardCol, currentCellRow, currentCellCol)"
                                        disabled="@(!CanMakeMove(currentBoardRow, currentBoardCol, currentCellRow, currentCellCol))">
                                    @GetCellDisplay(cell.State)
                                </button>
                            }
                        }
                    }
                </div>
            }
        }
    </div>
    }
</div>

@code {
    private UltimateBoard game = new UltimateBoard();
    private bool gameStarted = false;
    private string playerXName = "";
    private string playerOName = "";
    private int playerXScore = 0;
    private int playerOScore = 0;
    private CellState nextGameStarter = CellState.X; // Track who should start the next game
    private GameMode selectedGameMode = GameMode.Unlimited;
    private int customTotalMinutes = 10; // default for custom/chess clock
    private int customIncrementSeconds = 0; // default increment
    private bool _playVsBot = false;
    private bool playVsBot
    {
        get => _playVsBot;
        set
        {
            _playVsBot = value;
            if (_playVsBot)
            {
                selectedGameMode = GameMode.Unlimited;
            }
        }
    }
    private CellState botPlays = CellState.O;
    private IBot? bot;
    private enum BotDifficulty { Easy, Medium, Hard }
    private BotDifficulty _botDifficulty = BotDifficulty.Medium;
    private BotDifficulty botDifficulty
    {
        get => _botDifficulty;
        set
        {
            _botDifficulty = value;
            // Reflect difficulty in bot name immediately when changing setting
            if (playVsBot)
            {
                SetBotPlayerName();
            }
        }
    }
    private const int ThinkingDelayMs = 700; // bot "thinking" delay
    
    // Timer-related variables
    private Timer? moveTimer;
    private int remainingTime = 0; // per-move modes
    private int remainingTimeX = 0; // chess clock total for X
    private int remainingTimeO = 0; // chess clock total for O
    private bool isTimerRunning = false;
    private const string BotDefaultName = "Bot";
    private string GetBotDisplayName()
    {
        var diff = botDifficulty switch
        {
            BotDifficulty.Easy => "Easy",
            BotDifficulty.Medium => "Medium",
            BotDifficulty.Hard => "Hard",
            _ => "Medium"
        };
        return $"{BotDefaultName} ({diff})";
    }

    private void SetBotPlayerName()
    {
        var botName = GetBotDisplayName();
        if (botPlays == CellState.X)
        {
            playerXName = botName;
        }
        else
        {
            playerOName = botName;
        }
    }

    private void StartGame()
    {
        gameStarted = true;
        game = new UltimateBoard();
        game.SetStartingPlayer(nextGameStarter);
        // Assign bot name automatically if needed
        if (playVsBot)
        {
            // Always set bot name to include difficulty tag
            SetBotPlayerName();
        }
        bot = playVsBot ? CreateBot() : null;

        // If bot plays first, generate immediate bot move after timers init
        InitializeTimers();
        StartMoveTimer();

        if (playVsBot && game.CurrentPlayer == botPlays)
        {
            _ = MakeBotMoveAsync();
        }
    }

    private void BackToSetup()
    {
        gameStarted = false;
        game = new UltimateBoard();
        nextGameStarter = CellState.X; // Reset to X when changing players
        StopTimer();
        remainingTime = 0;
        remainingTimeX = 0;
        remainingTimeO = 0;
    }

    private async void MakeMove(int boardRow, int boardCol, int cellRow, int cellCol, bool isBot = false)
    {
        // Prevent human moving during bot turn (bot bypasses this)
        if (!isBot && playVsBot && game.State == BoardState.Active && game.CurrentPlayer == botPlays)
            return;
        var previousState = game.State;
        bool success = game.MakeMove(boardRow, boardCol, cellRow, cellCol);
        
        if (success)
        {
            // Apply increment for chess clock modes after a successful move
            if (selectedGameMode != GameMode.Unlimited && IsChessClockMode())
            {
                ApplyIncrementToPlayer(game.CurrentPlayer == CellState.X ? CellState.O : CellState.X);
            }
            // Switch active clock to next player
            if (selectedGameMode != GameMode.Unlimited && game.State == BoardState.Active)
            {
                if (IsChessClockMode())
                {
                    StartMoveTimer(); // continue ticking for next player without resetting totals
                }
                else
                {
                    StartMoveTimer(); // per-move modes reset
                }
            }
            else if (game.State != BoardState.Active)
            {
                StopTimer();
            }
        }
        
        // Check if the game just ended and update scores
        if (success && previousState == BoardState.Active && game.State != BoardState.Active)
        {
            if (game.State == BoardState.WonByX)
            {
                playerXScore++;
            }
            else if (game.State == BoardState.WonByO)
            {
                playerOScore++;
            }
            
            // Swap the starting player for the next game
            nextGameStarter = nextGameStarter == CellState.X ? CellState.O : CellState.X;
        }

        // If playing vs bot and it's now bot's turn, let bot move
        if (success && playVsBot && game.State == BoardState.Active && game.CurrentPlayer == botPlays)
        {
            await MakeBotMoveAsync();
        }
    }

    private async Task MakeBotMoveAsync()
    {
        if (bot == null) return;
        // small delay to feign thinking
        await Task.Delay(ThinkingDelayMs);
        var move = bot.ChooseMove(game);
        if (move.HasValue)
        {
            var (br, bc, cr, cc) = move.Value;
            MakeMove(br, bc, cr, cc, isBot: true);
            await InvokeAsync(StateHasChanged);
        }
    }

    private void StartMoveTimer()
    {
        StopTimer(); // Stop any existing timer
        
        if (selectedGameMode == GameMode.Unlimited) return;
        
        if (IsChessClockMode())
        {
            // Do not reset totals; ensure we have initial totals
            if (remainingTimeX == 0 && remainingTimeO == 0)
            {
                var total = GetTimeLimit();
                remainingTimeX = total;
                remainingTimeO = total;
            }
        }
        else
        {
            remainingTime = GetTimeLimit();
        }
        isTimerRunning = true;
        
        moveTimer = new Timer(async _ =>
        {
            if (isTimerRunning && game.State == BoardState.Active)
            {
                if (IsChessClockMode())
                {
                    if (game.CurrentPlayer == CellState.X)
                    {
                        remainingTimeX--;
                        if (remainingTimeX <= 0)
                        {
                            await InvokeAsync(() => HandleTimeLoss(CellState.X));
                            return;
                        }
                    }
                    else
                    {
                        remainingTimeO--;
                        if (remainingTimeO <= 0)
                        {
                            await InvokeAsync(() => HandleTimeLoss(CellState.O));
                            return;
                        }
                    }
                    await InvokeAsync(StateHasChanged);
                }
                else
                {
                    if (remainingTime > 0)
                    {
                        remainingTime--;
                        await InvokeAsync(StateHasChanged);
                    }
                    else
                    {
                        await InvokeAsync(() =>
                        {
                            TimeOutMove();
                        });
                    }
                }
            }
        }, null, TimeSpan.FromSeconds(1), TimeSpan.FromSeconds(1));
    }

    private void StopTimer()
    {
        isTimerRunning = false;
        moveTimer?.Dispose();
        moveTimer = null;
    }

    private int GetTimeLimit()
    {
        return selectedGameMode switch
        {
            GameMode.Blitz => 30,
            GameMode.Rapid => 60,
            GameMode.Chess5 => 300,
            GameMode.Chess10 => 600,
            GameMode.Chess5Inc3 => 300,
            GameMode.Chess10Inc5 => 600,
            GameMode.Custom => Math.Max(60, customTotalMinutes * 60),
            _ => 0
        };
    }

    private bool IsChessClockMode()
    {
        return selectedGameMode == GameMode.Chess5 || selectedGameMode == GameMode.Chess10 || selectedGameMode == GameMode.Chess5Inc3 || selectedGameMode == GameMode.Chess10Inc5 || selectedGameMode == GameMode.Custom;
    }

    private int CurrentPlayerRemainingTime()
    {
        return game.CurrentPlayer == CellState.X ? remainingTimeX : remainingTimeO;
    }

    private void InitializeTimers()
    {
        remainingTime = 0;
        remainingTimeX = 0;
        remainingTimeO = 0;
        if (IsChessClockMode())
        {
            var total = GetTimeLimit();
            remainingTimeX = total;
            remainingTimeO = total;
        }
    }

    private void ApplyIncrementToPlayer(CellState player)
    {
        var increment = GetIncrementSeconds();
        if (increment <= 0) return;
        if (player == CellState.X)
        {
            remainingTimeX += increment;
        }
        else
        {
            remainingTimeO += increment;
        }
    }

    private int GetIncrementSeconds()
    {
        if (selectedGameMode == GameMode.Custom)
        {
            return Math.Clamp(customIncrementSeconds, 0, 60);
        }
        // Built-in increments
        return selectedGameMode switch
        {
            GameMode.Chess5Inc3 => 3,
            GameMode.Chess10Inc5 => 5,
            _ => 0
        };
    }

    private void TimeOutMove()
    {
        // Find a random valid move
        var validMoves = new List<(int boardRow, int boardCol, int cellRow, int cellCol)>();
        
        for (int boardRow = 0; boardRow < 3; boardRow++)
        {
            for (int boardCol = 0; boardCol < 3; boardCol++)
            {
                for (int cellRow = 0; cellRow < 3; cellRow++)
                {
                    for (int cellCol = 0; cellCol < 3; cellCol++)
                    {
                        if (CanMakeMove(boardRow, boardCol, cellRow, cellCol))
                        {
                            validMoves.Add((boardRow, boardCol, cellRow, cellCol));
                        }
                    }
                }
            }
        }
        
        if (validMoves.Count > 0)
        {
            var random = new Random();
            var randomMove = validMoves[random.Next(validMoves.Count)];
            MakeMove(randomMove.boardRow, randomMove.boardCol, randomMove.cellRow, randomMove.cellCol);
        }
        
        StateHasChanged();
    }

    private void HandleTimeLoss(CellState timedOutPlayer)
    {
        // Player who runs out of time loses; opponent wins
        if (game.State == BoardState.Active)
        {
            game.LoseOnTime(timedOutPlayer);
            if (timedOutPlayer == CellState.X)
            {
                playerOScore++;
            }
            else
            {
                playerXScore++;
            }
            // Swap the starting player for the next game
            nextGameStarter = nextGameStarter == CellState.X ? CellState.O : CellState.X;
            StopTimer();
            StateHasChanged();
        }
    }

    private string FormatTime(int seconds)
    {
        if (seconds >= 60)
        {
            int minutes = seconds / 60;
            int remainingSeconds = seconds % 60;
            return $"{minutes}:{remainingSeconds:D2}";
        }
        return seconds.ToString();
    }

    private string GetTimerClass(int seconds)
    {
        if (seconds <= 5)
            return "timer-critical";
        else if (seconds <= 10)
            return "timer-warning";
        else
            return "timer-normal";
    }

    private bool CanMakeMove(int boardRow, int boardCol, int cellRow, int cellCol)
    {
        if (game.State != BoardState.Active) return false;
        if (playVsBot && game.CurrentPlayer == botPlays) return false; // human cannot move on bot's turn
        if (game.Boards[boardRow, boardCol].State != BoardState.Active) return false;
        if (game.Boards[boardRow, boardCol].Cells[cellRow, cellCol].State != CellState.Empty) return false;
        
        if (game.NextBoardRow.HasValue && game.NextBoardCol.HasValue)
        {
            return boardRow == game.NextBoardRow.Value && boardCol == game.NextBoardCol.Value;
        }
        
        return true;
    }

    private string GetBoardClass(SmallBoard board, bool isActive)
    {
        var classes = new List<string>();
        
        if (board.State == BoardState.WonByX) classes.Add("won-by-x");
        else if (board.State == BoardState.WonByO) classes.Add("won-by-o");
        else if (board.State == BoardState.Draw) classes.Add("draw");
        
        if (isActive && game.State == BoardState.Active) classes.Add("active-board");
        
        return string.Join(" ", classes);
    }

    private string GetCellClass(Cell cell, bool isInteractable)
    {
        var classes = new List<string>();
        
        if (cell.State == CellState.X) classes.Add("x");
        else if (cell.State == CellState.O) classes.Add("o");
        
        if (!isInteractable) classes.Add("disabled");
        
        return string.Join(" ", classes);
    }

    private string GetCellDisplay(CellState state)
    {
        return state switch
        {
            CellState.X => "X",
            CellState.O => "O",
            _ => ""
        };
    }

    private void ResetGame()
    {
        game = new UltimateBoard();
        game.SetStartingPlayer(nextGameStarter);
        // Ensure bot instance exists if single-player is enabled
        bot = playVsBot ? (bot ?? CreateBot()) : null;
        StartMoveTimer();
        // If bot starts the new game, trigger its move
        if (playVsBot && game.CurrentPlayer == botPlays)
        {
            _ = MakeBotMoveAsync();
        }
    }

    private IBot CreateBot()
    {
        return botDifficulty switch
        {
            BotDifficulty.Easy => new SimpleBot(),
            BotDifficulty.Medium => new AdvancedBot(2),
            BotDifficulty.Hard => new AdvancedBot(3),
            _ => new SimpleBot()
        };
    }

    private string GetBoardPositionName(int row, int col)
    {
        return (row, col) switch
        {
            (0, 0) => "upper left",
            (0, 1) => "upper middle",
            (0, 2) => "upper right",
            (1, 0) => "middle left",
            (1, 1) => "center",
            (1, 2) => "middle right",
            (2, 0) => "lower left",
            (2, 1) => "lower middle",
            (2, 2) => "lower right",
            _ => "unknown"
        };
    }

    public void Dispose()
    {
        StopTimer();
    }

    private bool CanStartGame()
    {
        if (!playVsBot)
            return !string.IsNullOrWhiteSpace(playerXName) && !string.IsNullOrWhiteSpace(playerOName);
        // Single player: require only the human name for the side opposite bot
        if (botPlays == CellState.X)
            return !string.IsNullOrWhiteSpace(playerOName);
        else
            return !string.IsNullOrWhiteSpace(playerXName);
    }
}
